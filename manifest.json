{
  "manifest_version": 3,
  "name": "LinkedIn AI Auto Commenter",
  "version": "1.1.0",
  "description": "Generate GPT/Gemini-powered comments (short/long/emoji) for LinkedIn posts.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://api.openai.com/*",
    "https://aistudio.google.com/"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "options.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
